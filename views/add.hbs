<div class="mt-3">
    <a href="/" class="text-primary">Quay lại</a>
    <h3 class="text-success mt-3">Thêm sản phẩm mới</h3>
    <form action="/add" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" value="{{name}}" class="form-control" id="name" name="name" placeholder="Nhập tên sản phẩm">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá sản phẩm</label>
            <input type="text" value="{{price}}" class="form-control" id="price" name="price" placeholder="Nhập giá bán">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" name="desc" id="description" rows="3" name="description">{{desc}}</textarea>
        </div>
        {{#if error}}
        <div class="alert alert-danger mt-3 notice">
            {{error}}
        </div>
        {{/if}}
        <button type="submit" class="btn btn-success py-2">Thêm sản phẩm</button>
    </form>
</div>
