<div class="mt-3">
    <a href="/" class="text-primary" method="POST">Quay lại</a>
    <h3 class="text-success mt-3">Thông tin chi tiết</h3>
    <div>
        <div class="mb-3">
            <label for="name" class="form-label" readonly>Tên sản phẩm</label>
            <input readonly value="{{product.name}}" type="text" class="form-control" id="name" name="name" placeholder="Nhập tên sản phẩm">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá sản phẩm</label>
            <input readonly value="{{product.price}}" type="text" class="form-control" id="price" name="price" placeholder="Nhập giá bán">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea  readonly class="form-control" id="description" rows="3" name="description">{{product.description}}</textarea>
        </div>
    </div>
</div>