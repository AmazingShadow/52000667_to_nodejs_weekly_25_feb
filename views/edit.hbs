<div class="mt-3">
    <a href="/" class="text-primary" method="POST">Quay lại</a>
    <h3 class="text-success mt-3">Thông tin chi tiết</h3>
    <form action="{{product.id}}" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input value="{{product.name}}" type="text" class="form-control" id="name" name="name" placeholder="Nhập tên sản phẩm">
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Giá sản phẩm</label>
            <input value="{{product.price}}" type="text" class="form-control" id="price" name="price" placeholder="Nhập giá bán">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" rows="3" name="description">{{product.description}}</textarea>
        </div>
        <div class="alert alert-danger mt-3">
            Vui lòng nhập đầy đủ thông tin
        </div>
        <button type="submit" class="btn btn-success py-2">Cập nhật sản phẩm</button>
    </form>
</div>